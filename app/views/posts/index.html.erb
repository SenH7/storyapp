<div class="posts-wrapper">
  <% @posts.each do |post| %>
    <div class="post">
      <h2><%= link_to post.title, post_path(post) %></h2>
      <p><%= post.content.truncate(100) %></p>
      <p>By: <%= link_to post.user&.personal_information&.username || post.user&.email, user_path(post.user)%></p>
    </div>
  <% end %>
</div>
